{
  "name": "obsidigen",
  "version": "1.0.4",
  "description": "Transform your Obsidian vault into a beautiful, browsable wiki with a modern three-column interface, hover previews, and optional Cloudflare Tunnel integration",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "obsidigen": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "public/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "link": "npm run build && npm link",
    "prepublishOnly": "npm run build",
    "release:patch": "npm version patch && git push origin --tags",
    "release:minor": "npm version minor && git push origin --tags",
    "release:major": "npm version major && git push origin --tags"
  },
  "keywords": [
    "obsidian",
    "wiki",
    "markdown",
    "knowledge-base",
    "personal-wiki",
    "second-brain",
    "note-taking",
    "cloudflare",
    "cloudflare-tunnel",
    "backlinks",
    "wiki-links",
    "documentation",
    "static-site",
    "vault",
    "zettelkasten"
  ],
  "author": "Caleb Smith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fyresmith/obsidigen.git"
  },
  "bugs": {
    "url": "https://github.com/fyresmith/obsidigen/issues"
  },
  "homepage": "https://github.com/fyresmith/obsidigen#readme",
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^12.1.0",
    "gray-matter": "^4.0.3",
    "hono": "^4.6.0",
    "@hono/node-server": "^1.13.0",
    "ora": "^8.1.0",
    "unified": "^11.0.5",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.1",
    "rehype-stringify": "^10.0.1",
    "rehype-raw": "^7.0.0",
    "unist-util-visit": "^5.0.0",
    "inquirer": "^10.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
